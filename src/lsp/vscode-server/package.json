{
  "name": "luma-lsp",
  "description": "Luma Language Server and Syntax Highlighter",
  "author": "SovietPancakes+TheDevConnor",
  "repository": {
    "url": "https://github.com/TheDevConnor/Luma"
  },
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "TheDevConnor",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready",
    "luma",
    "lsp"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./client/out/extension",
  "activationEvents": [
    "onLanguage:luma"
  ],
  "contributes": {
    "languages": [
      {
        "id": "luma",
        "aliases": [
          "Luma",
          "luma"
        ],
        "extensions": [
          ".lx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luma",
        "scopeName": "source.lx",
        "path": "./language-support/syntaxes/lux.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "luma.restartServer",
        "title": "Restart Luma LSP",
        "category": "Luma"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd .."
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}