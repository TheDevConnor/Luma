@module "main"

@use "string" as string

const Error = enum {
  SUCCESS,
  FAIL
};

pub const main = fn () int {
    let x: int = input<int>("Please enter a valid positive integer: ");
    let c: char = input<char>("Please enter a single character: ");
    
    if (x < 0) {
      output(x, " is not a valid positive integer!\n");
      return Error::FAIL; 
    } else {
      output(x, "\n", string::from_char(c), "\n");
    }

    return Error::SUCCESS;
}
