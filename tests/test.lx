@module "main"

const Person -> struct {
  name: *char,
  age: int,

  init -> fn (age: int, name: *char) void {
    self.name = name;
    self.age = age;
  },

  greet -> fn () void {
    output("I am ", self.name, " and I am ", self.age, " years old.\n");
  }
};

pub const main -> fn () int {
  let p: Person;

  p.init(20, "Connor");
  p.greet();

  return 0;
}