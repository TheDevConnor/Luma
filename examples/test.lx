@module "main"

pub const main = fn () int { 
    let a: int = 42;

    let x: *int = &a;
    let y: *int = &a;
    defer { 
        output("defer x: ", *x, ", y: ", *y, "\n");

        *x = 100;
        *y = 200;

        output("defer modified x: ", *x, ", y: ", *y, "\n");
    }
    
    output("x: ", *x, ", y: ", *y, "\n");

    return 0; 
}
