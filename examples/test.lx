@module "main"

pub const main = fn () int { 
   :: Infinite Loop (Working)
   let k: int = 0;
   loop {
        defer ++k;
        if (k <= 10) { output("k = ", k, "\n"); }
        else { break; }
   }

   :: For Loop (Working)
   loop [i: int = 0](i < 10) {
        outputln("i = ", i, "\n");
        ++i;
   }

   :: For Loop with multiple variables + optional (working)
   loop [i: int = 0, j: int = 0](i < 5) : (++i) {
      output("i = ", i, " j = ", j, "\n");
      ++j;
   }
        
   :: While Loop
   let j: int = 0;
   output("j = [");
   loop (j < 19) {
        outputln(j, ", ");
        ++j;
   }
   output("]\n");

   :: While Loop with optional 
   let a: int = 0;
   loop (a < 19) : (++j) {
        outputln("j = ", a, "\n");
        ++a;
   }
    
   return 0; 
}
